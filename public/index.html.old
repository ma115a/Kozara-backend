		<script>
			{
				async function load_blogs() {
					let sr = await fetch("https://integrity-vacuum-buzz-capable.trycloudflare.com/blog/latest")
					sr = await sr.json()
					if (!sr.success) {
						return
					}
					sr = sr.body
					const container = blog.querySelector(".blog-grid")
					sr.forEach(el => {
						container.innerHTML += `<div class="chalet-card">
							<img src="${el.title_img}" class="chalet-img" alt="Hiking" />
							<div class="chalet-details">
								<h4>${el.title}</h4>
								<a href="./blog/${el.blogid}"><button class="btn-view">Read Article</button></a>
							</div>
						</div>`
					})
				}
				load_blogs()
			}
		</script>

